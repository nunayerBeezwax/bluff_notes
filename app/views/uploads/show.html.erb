<%= @document %>

<style>

.chart div {
  font: 10px sans-serif;
  background-color: steelblue;
  text-align: right;
  padding: 3px;
  margin: 1px;
  color: white;
}

</style>

<div class="chart"></div>


<script>
  d3.select(".chart")
    .selectAll("div")
      .data(<%= @freqs.map{|thing| thing[1]} %>)
    .enter().append("div")
      .style("width", function(d) { return d / 10 + "px"; })
      .text(function(d) { return d; });
</script>


<% @freqs.each do |word, appearance|%>
  <div><%= "#{word}, #{appearance}" %></div>
<% end %>
